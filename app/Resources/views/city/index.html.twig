{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cities list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Population</th>
                <th>Description</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td><a href="{{ path('city_show', { 'id': city.id }) }}">{{ city.id }}</a></td>
                <td>{{ city.name }}</td>
                <td>{{ city.population }}</td>
                <td>{{ city.description }}</td>
                <td>{{ city.country }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('city_show', { 'id': city.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('city_edit', { 'id': city.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('city_new') }}">Create a new city</a>
        </li>
    </ul>

    <ul>
        <li>
            <a href="{{ path('homepage') }}">back to home</a>
        </li>
    </ul>
{% endblock %}
