{% extends 'base.html.twig' %}

{% block body %}
    <h1>Countries list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Population</th>
                <th>Capital</th>
                <th>Language</th>
                <th>Religion</th>
                <th>Currency</th>
                <th>Timezone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td><a href="{{ path('country_show', { 'id': country.id }) }}">{{ country.id }}</a></td>
                <td>{{ country.name }}</td>
                <td>{{ country.population }}</td>
                <td>{{ country.capital }}</td>
                <td>{{ country.language }}</td>
                <td>{{ country.religion }}</td>
                <td>{{ country.currency }}</td>
                <td>{% if country.timeZone %}{{ country.timeZone|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('country_show', { 'id': country.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('country_edit', { 'id': country.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('country_new') }}">Create a new country</a>
        </li>
    </ul>
    

    <ul>
        <li>
            <a href="{{ path('homepage') }}">back to homepage</a>
        </li>
    </ul>
{% endblock %}
