{% extends 'base.html.twig' %}

{% block body %}
    <h1>Country</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Population</th>
                <td>{{ country.population }}</td>
            </tr>
            <tr>
                <th>Capital</th>
                <td>{{ country.capital }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ country.language }}</td>
            </tr>
            <tr>
                <th>Religion</th>
                <td>{{ country.religion }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ country.currency }}</td>
            </tr>
            <tr>
                <th>Timezone</th>
                <td>{% if country.timeZone %}{{ country.timeZone|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('country_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('country_edit', { 'id': country.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
